<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.sign.KbSignActivity"
        android:background="@android:color/white"
        android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/kbSignImage"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="140dp"
                android:layout_width="100dp"
                android:background="@drawable/kb_login_profile_img"
                android:layout_height="100dp"/>

        <ImageView
                android:layout_toRightOf="@+id/kbSignImage"
                android:layout_below="@+id/kbSignImage"
                android:layout_marginLeft="-28dp"
                android:layout_marginTop="-28dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/kb_login_profile_revise_btn"/>


    </RelativeLayout>


    <EditText
            android:id="@+id/kbSignId"
            android:hint="아이디"
            android:paddingLeft="12.5dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:textSize="13sp"
            android:layout_marginTop="54dp"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:fontFamily="@font/nanumsquareregular"
            android:includeFontPadding="false"
            android:layout_height="40dp"
            android:background="@drawable/background_login_id"
    />

    <EditText
            android:id="@+id/kbSignPw"
            android:hint="패스워드"
            android:paddingLeft="12.5dp"
            android:textSize="13sp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="20dp"
            android:inputType="textWebPassword"
            android:password="true"
            android:layout_width="match_parent"
            android:textColor="@android:color/black"
            android:fontFamily="@font/nanumsquareregular"
            android:includeFontPadding="false"
            android:layout_height="40dp"
            android:background="@drawable/background_login_id"
    />


    <EditText
            android:id="@+id/kbSignNickname"
            android:hint="닉네임"
            android:paddingLeft="12.5dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:textSize="13sp"
            android:layout_marginTop="20dp"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:fontFamily="@font/nanumsquareregular"
            android:includeFontPadding="false"
            android:layout_height="40dp"
            android:background="@drawable/background_login_id"
    />

    <RelativeLayout
            android:id="@+id/kbSignBtn"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="36dp"
            android:background="@drawable/border_background">


        <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:fontFamily="@font/nanumsquarebold"
                android:includeFontPadding="false"
                android:lineSpacingExtra="2sp"
                android:text="가입하기"
        />

    </RelativeLayout>


</LinearLayout>