<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@android:color/transparent"

>


    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
    android:layout_centerInParent="true">

        <RelativeLayout
                android:id="@+id/dialog_icons"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_height="30dp"
                android:background="#00000000"
                android:gravity="bottom"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/yellow_icon"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/attendance_character_yellow"/>

            <ImageView
                    android:layout_toRightOf="@+id/yellow_icon"
                    android:id="@+id/blue_icon"
                    android:layout_marginLeft="12dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/attendance_character_blue"/>

            <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="42dp"
                    android:layout_height="17dp"
                    android:src="@drawable/attendance_character_lavender"/>
        </RelativeLayout>

        <LinearLayout
                android:id="@+id/dialog_view"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="36dp"
                android:layout_below="@+id/dialog_icons"
                android:background="@drawable/border_sliding_layout_background"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/live_finish_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="45dp"
                    app:civ_border_color="@color/greyblue"
                    app:civ_border_width="5dp"
                    android:src="@drawable/kb_login_profile_revise_btn"
                    android:layout_width="105dp"
                    android:layout_height="105dp"/>

            <TextView
                    android:id="@+id/live_finish_usr_tv"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/nanumsquareextrabold"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#414141"
                    android:lineSpacingExtra="8sp"
                    android:gravity="center_horizontal"
                    android:text="둘무너님"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/mainColor"
                    android:lineSpacingExtra="8sp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/nanumsquareextrabold"
                    android:includeFontPadding="false"
                    android:text="@string/live_finish_text"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/nanumsquarebold"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="11sp"
                    android:gravity="center_horizontal"
                    android:text="우승을 축하합니다. \n500 포인트리를 얻으셨습니다!"
            />

            <RelativeLayout
                    android:id="@+id/goToOkayBtn"
                    android:layout_below="@+id/three_title"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginHorizontal="83dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/border_show_detail_btn_background">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:lineSpacingExtra="2sp"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/nanumsquareextrabold"
                        android:includeFontPadding="false"
                        android:text="확인"
                />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>