<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            android:elevation="2dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#3d3d3d"
                android:lineSpacingExtra="7sp"
                android:text="쿠폰샵"
                android:layout_centerInParent="true"
                android:fontFamily="@font/nanumsquarebold"
                android:includeFontPadding="false"
        />

        <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="match_parent">


            <ImageView
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mypage_x_btn"/>
        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:elevation="1dp"
            android:background="@android:color/white"
            android:orientation="horizontal">

        <RelativeLayout
                android:id="@+id/home_tab_btn"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="9sp"
                    android:fontFamily="@font/nanumsquarebold"
                    android:includeFontPadding="false"
                    android:gravity="center_horizontal"
                    android:text="홈"
            />

        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/sale_tab_btn"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="9sp"
                    android:fontFamily="@font/nanumsquarebold"
                    android:includeFontPadding="false"
                    android:gravity="center_horizontal"
                    android:text="특가"
            />

        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/brand_tab_btn"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="9sp"
                    android:fontFamily="@font/nanumsquarebold"
                    android:includeFontPadding="false"
                    android:gravity="center_horizontal"
                    android:text="브랜드"
            />

        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/price_tab_btn"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"
                    android:textColor="#000000"
                    android:lineSpacingExtra="9sp"
                    android:fontFamily="@font/nanumsquarebold"
                    android:includeFontPadding="false"
                    android:gravity="center_horizontal"
                    android:text="가격 "
            />

        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/purchase_tab_btn"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"
                    android:textColor="#000000"
                    android:lineSpacingExtra="9sp"
                    android:fontFamily="@font/nanumsquarebold"
                    android:includeFontPadding="false"
                    android:gravity="center_horizontal"
                    android:text="구매"
            />

        </RelativeLayout>

    </LinearLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/nanumsquarebold"
                    android:includeFontPadding="false"
                    android:textColor="#757575"
                    android:lineSpacingExtra="3sp"
                    android:text="추운 겨울에 즐기는 따뜻한 커피"
            />

            <TextView
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10.5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/nanumsquareregular"
                    android:includeFontPadding="false"
                    android:textColor="#a2a2a2"
                    android:lineSpacingExtra="2sp"
                    android:text="다양한 종류의 커피를 맛 보세요"
            />

            <RelativeLayout
                    android:layout_marginTop="30dp"
                    android:background="@color/backColor"
                    android:layout_width="match_parent"
                    android:layout_height="500dp">

                <android.support.v7.widget.RecyclerView
                        android:layout_marginHorizontal="14dp"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:id="@+id/coffee_rv"
                        android:layout_height="match_parent"/>

            </RelativeLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>