<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drag_view"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">


    <!--약간 사이즈 작게 하고 싶으면 바로 밑에 있는 리니어 레이아웃에
    android:layout_marginHorizontal="16dp" 추가하면됨.
    -->
    <LinearLayout
            android:id="@+id/sliding_tops"
            android:elevation="1dp"
            android:background="@drawable/border_sliding_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/home_slide_btn"
                android:layout_gravity="center_horizontal"/>

        <ScrollView
                android:scrollbars="none"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">




                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="22dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_alignParentLeft="true"
                            android:id="@+id/main_image"
                            android:layout_width="51dp"
                            android:layout_height="61dp"
                            android:src="@drawable/drawer_survey_icon"/>

                    <LinearLayout
                            android:layout_toRightOf="@+id/main_image"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="19sp"
                                    android:textColor="#3d3d3d"
                                    android:fontFamily="@font/nanumsquarebold"
                                    android:includeFontPadding="false"
                                    android:lineSpacingExtra="3sp"
                                    android:text="황윤선"
                            />

                            <TextView
                                    android:layout_marginLeft="4dp"
                                    android:fontFamily="@font/nanumsquareregular"
                                    android:includeFontPadding="false"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textColor="#3d3d3d"
                                    android:lineSpacingExtra="2sp"
                                    android:text="님"
                            />

                        </LinearLayout>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="#707070"
                                android:lineSpacingExtra="1sp"
                                android:text="hwangys0522@gmail.com"
                        />


                    </LinearLayout>


                    <RelativeLayout
                            android:id="@+id/homeGoToMypageBtn"
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_height="match_parent">

                        <ImageView
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:layout_marginRight="36dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:src="@drawable/main_slide_right_arrow_btn"/>


                    </RelativeLayout>


                </RelativeLayout>


                <LinearLayout
                        android:elevation="1dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/border_sliding_layout_background"
                        android:layout_marginHorizontal="16dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="110dp">

                    <RelativeLayout
                            android:id="@+id/topLayout"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:background="@drawable/border_sliding_top_background">

                        <TextView
                                android:id="@+id/historyBtn"
                                android:layout_toLeftOf="@+id/history_arrow_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="#a2a2a2"
                                android:lineSpacingExtra="1sp"
                                android:gravity="end"
                                android:text="내역 보기"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="11dp"
                                android:fontFamily="@font/nanumsquareregular"
                                android:includeFontPadding="false"
                        />

                        <ImageView
                                android:id="@+id/history_arrow_btn"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="15dp"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/main_slide_right_arrow_btn"/>
                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                    >

                        <ImageView
                                android:layout_alignParentLeft="true"
                                android:id="@+id/sliding_pointree"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:src="@drawable/main_pointree_icon"/>

                        <TextView
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/sliding_pointree"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="#707070"
                                android:fontFamily="@font/nanumsquarebold"
                                android:includeFontPadding="false"
                                android:lineSpacingExtra="2sp"
                                android:text="내 포인트리"
                        />

                        <TextView
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="24sp"
                                android:textColor="#707070"
                                android:lineSpacingExtra="3sp"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="22dp"
                                android:fontFamily="@font/nanumsquareextrabold"
                                android:includeFontPadding="false"
                                android:text="3,000 P"
                        />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                        android:elevation="1dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/border_sliding_layout_background"
                        android:layout_marginHorizontal="16dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="131dp">

                    <RelativeLayout
                            android:id="@+id/pointree_go_btn"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:background="@drawable/border_sliding_top_background">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="#a2a2a2"
                                android:lineSpacingExtra="1sp"
                                android:gravity="end"
                                android:text="포인트리샵 가기"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="30dp"
                                android:fontFamily="@font/nanumsquareregular"
                                android:includeFontPadding="false"
                        />

                        <ImageView
                                android:id="@+id/pointree_arrow_btn"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="15dp"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/main_slide_right_arrow_btn"/>

                    </RelativeLayout>


                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">


                            <LinearLayout
                                    android:id="@+id/goToCouponShopBtn"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                <ImageView
                                        android:layout_gravity="center_horizontal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/main_slide_coupon_icon"/>
                                <TextView
                                        android:layout_marginTop="10dp"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="#707070"
                                        android:lineSpacingExtra="2sp"
                                        android:text="쿠폰샵"
                                />


                            </LinearLayout>

                            <LinearLayout
                                    android:id="@+id/goToStockBtn"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                <ImageView
                                        android:layout_gravity="center_horizontal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/main_slide_stock_icon"/>
                                <TextView
                                        android:layout_marginTop="10dp"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="#707070"
                                        android:lineSpacingExtra="2sp"
                                        android:text="주식/펀드"
                                />


                            </LinearLayout>
                            <LinearLayout
                                    android:id="@+id/goToExchangeBtn"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                <ImageView
                                        android:layout_gravity="center_horizontal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/main_slide_exchange_icon"/>
                                <TextView
                                        android:layout_marginTop="10dp"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="#707070"
                                        android:lineSpacingExtra="2sp"
                                        android:text="환전하기"
                                />


                            </LinearLayout>
                            <LinearLayout
                                    android:id="@+id/goToQRBtn"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                <ImageView
                                        android:layout_gravity="center_horizontal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/main_slide_qr_code_icon"/>
                                <TextView
                                        android:layout_marginTop="10dp"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="#707070"
                                        android:lineSpacingExtra="2sp"
                                        android:text="QR결제"
                                />


                            </LinearLayout>

                        </LinearLayout>


                    </RelativeLayout>


                </LinearLayout>


                <RelativeLayout
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="165dp"
                        android:background="@drawable/boder_pointree_background">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/main_slide_pointree_background_img"></RelativeLayout>

                    <LinearLayout
                            android:layout_marginTop="40dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:orientation="horizontal">

                            <TextView
                                    android:id="@+id/sliding_text_one"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="19sp"
                                    android:textColor="#707070"
                                    android:lineSpacingExtra="3sp"
                                    android:text="포인트리"
                                    android:fontFamily="@font/nanumsquareextrabold"
                                    android:includeFontPadding="false"
                            />
                            <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="19sp"
                                    android:textColor="#707070"
                                    android:lineSpacingExtra="3sp"
                                    android:fontFamily="@font/nanumsquareregular"
                                    android:includeFontPadding="false"
                                    android:text="를 통해"
                            />

                        </LinearLayout>


                        <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                            <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="19sp"
                                    android:textColor="#707070"
                                    android:lineSpacingExtra="3sp"
                                    android:text="작은 주식"
                                    android:fontFamily="@font/nanumsquareextrabold"
                                    android:includeFontPadding="false"
                            />


                            <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="19sp"
                                    android:textColor="#707070"
                                    android:lineSpacingExtra="3sp"
                                    android:fontFamily="@font/nanumsquareregular"
                                    android:includeFontPadding="false"
                                    android:text="을 시작해 보세요!"
                            />


                        </LinearLayout>

                        <TextView
                                android:layout_marginTop="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:fontFamily="@font/nanumsquareregular"
                                android:includeFontPadding="false"
                                android:textColor="#a2a2a2"
                                android:lineSpacingExtra="1sp"
                                android:text="쉽고 간편한, 소액 투자"
                        />

                    </LinearLayout>


                </RelativeLayout>


                <RelativeLayout
                        android:layout_marginBottom="30dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_width="match_parent"
                        android:background="@drawable/boder_pointree_bottom_background"
                        android:layout_height="285dp">


                    <LinearLayout
                            android:id="@+id/random_layout"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="20.5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/main_slide_best_pointree_icon"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="#707070"
                                android:fontFamily="@font/nanumsquarebold"
                                android:includeFontPadding="false"
                                android:layout_marginLeft="8dp"
                                android:lineSpacingExtra="2sp"
                                android:text="BEST 포인트리 주식"
                        />

                    </LinearLayout>


                    <LinearLayout
                            android:id="@+id/widget_layout"
                            android:layout_centerVertical="true"
                            android:layout_below="@+id/random_layout"
                            android:layout_marginTop="18dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                        <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                        >

                            <ImageView
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="88dp"
                                    android:layout_height="114dp"
                                    android:background="@drawable/border_background"/>

                            <LinearLayout
                                    android:layout_marginTop="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="#fdbd37"
                                        android:lineSpacingExtra="2sp"
                                        android:text="1"
                                        android:fontFamily="@font/nanumsquareextrabold"
                                        android:includeFontPadding="false"
                                />

                                <TextView
                                        android:layout_marginLeft="5dp"
                                        android:fontFamily="@font/nanumsquareregular"
                                        android:includeFontPadding="false"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="#757575"
                                        android:lineSpacingExtra="2sp"
                                        android:text="국민은행"
                                />
                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                        >

                            <ImageView
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="88dp"
                                    android:layout_height="114dp"
                                    android:background="@drawable/border_background"/>

                            <LinearLayout
                                    android:layout_marginTop="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="#fdbd37"
                                        android:lineSpacingExtra="2sp"
                                        android:text="1"
                                        android:fontFamily="@font/nanumsquareextrabold"
                                        android:includeFontPadding="false"
                                />

                                <TextView
                                        android:layout_marginLeft="5dp"
                                        android:fontFamily="@font/nanumsquareregular"
                                        android:includeFontPadding="false"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="#757575"
                                        android:lineSpacingExtra="2sp"
                                        android:text="국민은행"
                                />
                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                        >

                            <ImageView
                                    android:layout_width="88dp"
                                    android:layout_height="114dp"
                                    android:background="@drawable/border_background"/>

                            <LinearLayout
                                    android:layout_marginTop="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                <TextView
                                        android:fontFamily="@font/nanumsquareextrabold"
                                        android:includeFontPadding="false"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="#fdbd37"
                                        android:lineSpacingExtra="2sp"
                                        android:text="1"
                                />

                                <TextView
                                        android:layout_marginLeft="5dp"
                                        android:fontFamily="@font/nanumsquareregular"
                                        android:includeFontPadding="false"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="#757575"
                                        android:lineSpacingExtra="2sp"
                                        android:text="국민은행"
                                />
                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>


                    <RelativeLayout
                            android:layout_marginTop="25dp"
                            android:background="@drawable/border_show_detail_btn_background"
                            android:layout_marginHorizontal="64dp"
                            android:layout_width="match_parent" android:layout_height="46dp"
                            android:layout_below="@+id/widget_layout">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="#ffffff"
                                android:layout_centerInParent="true"
                                android:lineSpacingExtra="2sp"
                                android:fontFamily="@font/nanumsquareextrabold"
                                android:includeFontPadding="false"
                                android:gravity="center_horizontal"
                                android:text="자세히 보기"
                        />

                    </RelativeLayout>

                </RelativeLayout>


            </LinearLayout>


        </ScrollView>
    </LinearLayout>


</LinearLayout>