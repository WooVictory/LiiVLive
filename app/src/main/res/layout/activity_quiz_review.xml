<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.quiz.QuizReviewActivity"
        android:background="@android:color/white"
        android:elevation="3dp"
        android:orientation="vertical">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            android:elevation="1dp">

        <RelativeLayout
                android:id="@+id/quiz_review_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/navi_left_arrow_btn"/>

        </RelativeLayout>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#3d3d3d"
                android:lineSpacingExtra="3sp"
                android:layout_centerInParent="true"
                android:fontFamily="@font/nanumsquarebold"
                android:includeFontPadding="false"
                android:text="퀴즈 리뷰"
        />


    </RelativeLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/quizReviewTextFirst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_marginTop="28dp"
                    android:textColor="#757575"
                    android:lineSpacingExtra="2sp"
                    android:text="2018.11.08"
                    android:layout_marginLeft="36dp"
                    android:fontFamily="@font/nanumsquarebold"
                    android:includeFontPadding="false"
            />


            <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="16dp"
                    android:id="@+id/quizReviewRvOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/quizReviewTextSecond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_marginTop="29.2dp"
                    android:textColor="#757575"
                    android:lineSpacingExtra="2sp"
                    android:text="2018.11.08"
                    android:layout_marginLeft="36dp"
                    android:fontFamily="@font/nanumsquarebold"
                    android:includeFontPadding="false"
            />


            <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="18dp"
                    android:id="@+id/quizReviewRvTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/quizReviewTextThird"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_marginTop="29.2dp"
                    android:textColor="#757575"
                    android:lineSpacingExtra="2sp"
                    android:text="2018.11.08"
                    android:layout_marginLeft="36dp"
                    android:fontFamily="@font/nanumsquarebold"
                    android:includeFontPadding="false"
            />


            <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="18dp"
                    android:id="@+id/quizReviewRvThree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"/>

        </LinearLayout>


    </ScrollView>


</LinearLayout>