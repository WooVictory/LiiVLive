<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.mypage.MypageActivity"
        android:background="@android:color/white"
        android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            android:elevation="2dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#3d3d3d"
                android:lineSpacingExtra="7sp"
                android:text="마이페이지"
                android:layout_centerInParent="true"
                android:fontFamily="@font/nanumsquarebold"
                android:includeFontPadding="false"
        />

        <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="match_parent">


            <ImageView
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mypage_x_btn"/>
        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp">


        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginLeft="36dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/kb_login_profile_img"
                android:id="@+id/mypage_profile_image"
                android:layout_width="61dp"
                android:layout_height="61dp"/>

        <ImageView
                android:layout_toRightOf="@+id/mypage_profile_image"
                android:layout_marginTop="65dp"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginLeft="-15dp"
                android:src="@drawable/kb_login_profile_revise_btn"/>


        <LinearLayout
                android:id="@+id/name_email_layout"
                android:layout_toRightOf="@+id/mypage_profile_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginLeft="24dp"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <TextView
                        android:fontFamily="@font/nanumsquarebold"
                        android:includeFontPadding="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="19sp"
                        android:textColor="#3d3d3d"
                        android:lineSpacingExtra="3sp"
                        android:text="돌무너"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#3d3d3d"
                        android:fontFamily="@font/nanumsquareregular"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="2sp"
                        android:text="님"
                />
            </LinearLayout>

            <TextView
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/nanumsquareregular"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#707070"
                    android:lineSpacingExtra="1sp"
                    tools:text="hyoungyoon6@gmail.com"
            />
        </LinearLayout>


        <LinearLayout
                android:layout_centerVertical="true"


                android:layout_alignParentRight="true"
                android:layout_marginRight="36dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#3d3d3d"
                    android:lineSpacingExtra="1sp"
                    android:gravity="center_horizontal"
                    android:text="설정"
                    android:fontFamily="@font/nanumsquareregular"
                    android:includeFontPadding="false"
            />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_slide_right_arrow_btn"/>

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
            android:background="#f6f6f6"
            android:layout_width="match_parent"
            android:layout_height="112dp">

        <RelativeLayout
                android:elevation="3dp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginHorizontal="16dp"
                android:layout_centerVertical="true"
                android:background="@drawable/border_sliding_layout_background">

            <ImageView
                    android:id="@+id/mypage_attendance_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mypage_attendance_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20.4dp"/>

            <LinearLayout
                    android:id="@+id/mypage_check_text_layout"
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/mypage_attendance_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                <TextView
                        android:fontFamily="@font/nanumsquarebold"
                        android:includeFontPadding="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#414141"
                        android:lineSpacingExtra="2sp"
                        android:text="출석체크"
                />

                <TextView
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="#afafaf"
                        android:lineSpacingExtra="1sp"
                        android:fontFamily="@font/nanumsquareregular"
                        android:includeFontPadding="false"
                        android:text="출첵하면 3P를 드립니다!"
                />

            </LinearLayout>

            <RelativeLayout
                    android:id="@+id/goToCheckBtn"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">


                <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20.6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/main_slide_right_arrow_btn"/>


            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">
        <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquarebold"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:textColor="#414141"
                android:lineSpacingExtra="2sp"
                android:text="설정"
        />

        <RelativeLayout
                android:id="@+id/goToSettingBtn"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="match_parent">


            <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="35.6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_slide_right_arrow_btn"/>


        </RelativeLayout>

    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#858585"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">
        <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquarebold"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:textColor="#414141"
                android:lineSpacingExtra="2sp"
                android:text="FAQ"
        />

        <RelativeLayout
                android:id="@+id/goToFAQBtn"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="match_parent">


            <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="35.6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_slide_right_arrow_btn"/>


        </RelativeLayout>

    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#858585"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">
        <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquarebold"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:textColor="#414141"
                android:lineSpacingExtra="2sp"
                android:text="문의하기"
        />

        <RelativeLayout
                android:id="@+id/goToQuestionBtn"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="match_parent">


            <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="35.6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_slide_right_arrow_btn"/>


        </RelativeLayout>

    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#858585"/>

</LinearLayout>