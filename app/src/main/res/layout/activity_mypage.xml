<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.mypage.MypageActivity"
        android:background="@android:color/white"
        android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            android:elevation="2dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#3d3d3d"
                android:lineSpacingExtra="7sp"
                android:text="마이페이지"
                android:layout_centerInParent="true"
                android:fontFamily="@font/nanumsquarebold"
                android:includeFontPadding="false"
        />

        <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="match_parent">


            <ImageView
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mypage_x_btn"/>
        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp">


        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginLeft="36dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/kb_login_profile_img"
                android:id="@+id/mypage_profile_image"
                android:layout_width="61dp"
                android:layout_height="61dp"/>

        <ImageView
                android:layout_toRightOf="@+id/mypage_profile_image"
                android:layout_marginTop="65dp"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginLeft="-15dp"
                android:src="@drawable/kb_login_profile_revise_btn"/>


        <LinearLayout
                android:id="@+id/name_email_layout"
                android:layout_toRightOf="@+id/mypage_profile_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginLeft="24dp"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <TextView
                        android:fontFamily="@font/nanumsquarebold"
                        android:includeFontPadding="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="19sp"
                        android:textColor="#3d3d3d"
                        android:lineSpacingExtra="3sp"
                        android:text="돌무너"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#3d3d3d"
                        android:fontFamily="@font/nanumsquareregular"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="2sp"
                        android:text="님"
                />
            </LinearLayout>

            <TextView
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/nanumsquareregular"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#707070"
                    android:lineSpacingExtra="1sp"
                    tools:text="hyoungyoon6@gmail.com"
            />
        </LinearLayout>


        <LinearLayout
                android:layout_centerVertical="true"


                android:layout_alignParentRight="true"
                android:layout_marginRight="36dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#3d3d3d"
                    android:lineSpacingExtra="1sp"
                    android:gravity="center_horizontal"
                    android:text="설정"
                    android:fontFamily="@font/nanumsquareregular"
                    android:includeFontPadding="false"
            />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_slide_right_arrow_btn"/>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>