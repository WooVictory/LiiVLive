<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.login.KbLoginActivity"
        android:orientation="vertical">

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:src="@drawable/liiv_live_logo"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="160dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#fdbd37"
            android:lineSpacingExtra="1sp"
            android:fontFamily="@font/nanumsquareregular"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="11dp"
            android:includeFontPadding="false"
            android:text="재미있는 금융시작! 리브 라이브"
    />

    <RelativeLayout
            android:id="@+id/loginStarBangkingBtn"
            android:layout_marginTop="71.3dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="36dp"
            android:background="@drawable/border_show_detail_btn_background">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="2sp"
                android:fontFamily="@font/nanumsquarebold"
                android:includeFontPadding="false"
                android:text="KB 스타뱅킹"
                android:layout_centerInParent="true"
        />

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/loginKBSignBtn"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="36dp"
            android:background="@drawable/border_show_detail_btn_background">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="2sp"
                android:fontFamily="@font/nanumsquarebold"
                android:includeFontPadding="false"
                android:text=" KB 신규가입"
                android:layout_centerInParent="true"
        />

    </RelativeLayout>

</LinearLayout>