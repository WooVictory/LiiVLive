    <LinearLayout
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:background="@color/backColor">

        <RelativeLayout
                android:id="@+id/exchange_stock_layout1"
                android:background="@drawable/border_button_templete"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="6dp"
                android:layout_height="41dp">

            <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#707070"
                    android:lineSpacingExtra="1sp"
                    android:fontFamily="@font/nanumsquarebold"
                    android:includeFontPadding="false"
                    android:text="KB 국민은행"
            />


        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/exchange_stock_layout2"
                android:layout_width="0dp"
                android:background="@drawable/border_button_templete"
                android:layout_weight="1"
                android:layout_height="41dp">

            <TextView
                    android:id="@+id/exchange_stock_text"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#707070"
                    android:lineSpacingExtra="1sp"
                    android:fontFamily="@font/nanumsquarebold"
                    android:includeFontPadding="false"
                    android:text="KB 증권"
            />


        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/exchange_stock_layout3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="6dp"
                android:background="@drawable/border_button_templete"
                android:layout_height="41dp">

            <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#707070"
                    android:lineSpacingExtra="1sp"
                    android:fontFamily="@font/nanumsquarebold"
                    android:includeFontPadding="false"
                    android:text="KB 저축은행"
            />


        </RelativeLayout>

    </LinearLayout>

    <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/nanumsquarebold"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#a2a2a2"
            android:lineSpacingExtra="2sp"
            android:text="계좌번호"
    />

    <EditText
            android:hint="계좌번호를 입력해주세요."
            android:fontFamily="@font/nanumsquareregular"
            android:theme="@style/Theme.App.Base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="16dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="52dp"
            android:fontFamily="@font/nanumsquarebold"
            android:includeFontPadding="false"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#a2a2a2"
            android:lineSpacingExtra="2sp"
            android:layout_marginLeft="16dp"

            android:text="내 포인트리"
    />

    <EditText
            android:hint="포인트리를 입력해주세요."
            android:fontFamily="@font/nanumsquareregular"
            android:id="@+id/exchange_will_use_pointree"
            android:theme="@style/Theme.App.Base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:layout_marginHorizontal="16dp"/>


    <LinearLayout
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
    >

        <RelativeLayout
                android:id="@+id/exchange_ten_man"
                android:background="@drawable/border_button_yellow_templete"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="6dp"
                android:layout_height="41dp">

            <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/mainColor"
                    android:lineSpacingExtra="1sp"
                    android:fontFamily="@font/nanumsquarebold"
                    android:includeFontPadding="false"
                    android:text="+ 100,000 P"
            />


        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/exchange_man"
                android:layout_width="0dp"
                android:background="@drawable/border_button_yellow_templete"
                android:layout_weight="1"
                android:layout_height="41dp">

            <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/mainColor"
                    android:lineSpacingExtra="1sp"
                    android:fontFamily="@font/nanumsquarebold"
                    android:includeFontPadding="false"
                    android:text="+ 10,000 P"
            />


        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/exchange_chen"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="6dp"
                android:background="@drawable/border_button_yellow_templete"
                android:layout_height="41dp">

            <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/mainColor"
                    android:lineSpacingExtra="1sp"
                    android:fontFamily="@font/nanumsquarebold"
                    android:includeFontPadding="false"
                    android:text="+1,000 P"
            />


        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
            android:id="@+id/exchangeCompleteBtn"
            android:layout_marginTop="50dp"
            android:background="@drawable/border_button_blue"
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="2sp"
                android:layout_centerInParent="true"
                android:fontFamily="@font/nanumsquareextrabold"
                android:includeFontPadding="false"
                android:gravity="center_horizontal"
                android:text="보내기"
        />


    </RelativeLayout>

</LinearLayout>