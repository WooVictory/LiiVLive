<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.exchange.ExchageActivity"
        android:background="@android:color/white"
        android:orientation="vertical">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            android:elevation="2dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#3d3d3d"
                android:lineSpacingExtra="7sp"
                android:text="포인트리"
                android:layout_centerInParent="true"
                android:fontFamily="@font/nanumsquarebold"
                android:includeFontPadding="false"
        />

        <RelativeLayout
                android:id="@+id/exchangeXBtn"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="match_parent">


            <ImageView
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mypage_x_btn"/>
        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
            android:elevation="1dp"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="16dp"
            android:layout_centerVertical="true"
            android:background="@drawable/border_sliding_layout_background">


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="21dp"
                android:gravity="center"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/exchangeMyPointree"
                    android:fontFamily="@font/nanumsquarebold"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:textColor="#707070"
                    android:layout_alignParentLeft="true"
                    android:lineSpacingExtra="2sp"
                    android:text="내 포인트리"
            />

            <TextView
                    android:id="@+id/exchange_my_point"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#707070"
                    android:lineSpacingExtra="3sp"
                    android:fontFamily="@font/nanumsquareextrabold"
                    android:includeFontPadding="false"
                    android:text="3,000 P"
            />

        </RelativeLayout>


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="21dp"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#707070"
                    android:lineSpacingExtra="2sp"
                    android:fontFamily="@font/nanumsquarebold"
                    android:includeFontPadding="false"
                    android:text="보내기 가능 포인트리"
                    android:layout_centerVertical="true"
            />

            <TextView
                    android:id="@+id/posible_exchange_point"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#707070"
                    android:lineSpacingExtra="3sp"
                    android:fontFamily="@font/nanumsquareextrabold"
                    android:includeFontPadding="false"
                    android:text="3,000 P"
            />


        </RelativeLayout>


    </RelativeLayout>


