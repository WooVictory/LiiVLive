<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.login.LoginActivity"
        android:background="@android:color/white"
        android:orientation="vertical">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="102.2dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/liiv_live_logo"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="13sp"
            android:textColor="#fdbd37"
            android:lineSpacingExtra="1sp"
            android:fontFamily="@font/nanumsquareregular"
            android:includeFontPadding="false"
            android:layout_gravity="center_horizontal"
            android:text="재미있는 금융시작! 리브 라이브"
    />

    <EditText
            android:id="@+id/loginId"
            android:hint="아이디"
            android:paddingLeft="12.5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="52.5dp"
            android:layout_marginHorizontal="36dp"
            android:layout_width="match_parent"
            android:fontFamily="@font/nanumsquareregular"
            android:includeFontPadding="false"
            android:textSize="13sp"
            android:layout_height="38dp"
            android:background="@drawable/background_login_id"
    />


    <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/loginPw"
            android:hint="패스워드"
            android:paddingLeft="12.5dp"
            android:layout_marginHorizontal="36dp"
            android:fontFamily="@font/nanumsquareregular"
            android:includeFontPadding="false"
            android:paddingRight="20dp"
            android:textSize="13sp"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/background_login_id"
    />


    <LinearLayout

            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="20.2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/loginCheckBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/selector_login_check"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#757575"
                android:fontFamily="@font/nanumsquareregular"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:includeFontPadding="false"
                android:lineSpacingExtra="1sp"
                android:text="로그인 상태 유지"
        />


    </LinearLayout>


    <RelativeLayout
            android:id="@+id/loginBtn"
            android:layout_marginTop="34dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_height="40dp"
            android:background="@drawable/border_background">

        <TextView
                android:id="@+id/loginText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:fontFamily="@font/nanumsquarebold"
                android:includeFontPadding="false"
                android:layout_centerInParent="true"
                android:lineSpacingExtra="2sp"
                android:text="로그인"
        />
    </RelativeLayout>

    <LinearLayout

            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#afafaf"
                android:fontFamily="@font/nanumsquareregular"
                android:includeFontPadding="false"
                android:lineSpacingExtra="1sp"
                android:text="아이디 찾기"
        />

        <TextView
                android:layout_marginLeft="3.5dp"
                android:layout_marginRight="3.5dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#cecece"
                android:lineSpacingExtra="1sp"
                android:text="｜"
        />

        <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#afafaf"
                android:fontFamily="@font/nanumsquareregular"
                android:includeFontPadding="false"
                android:lineSpacingExtra="1sp"
                android:text="비밀번호 재설정"
        />


        <TextView
                android:layout_marginLeft="3.5dp"
                android:layout_marginRight="3.5dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#cecece"
                android:lineSpacingExtra="1sp"
                android:text="｜"
        />
        <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#afafaf"
                android:fontFamily="@font/nanumsquareregular"
                android:includeFontPadding="false"
                android:lineSpacingExtra="1sp"
                android:text="회원가입"
        />
    </LinearLayout>


    <LinearLayout
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <View android:layout_width="100dp"
              android:layout_gravity="center_vertical"
              android:layout_height="0.5dp"
              android:background="#cecece"/>

        <TextView
                android:layout_marginLeft="6.5dp"
                android:layout_marginRight="6.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#cecece"
                android:lineSpacingExtra="2sp"
                android:text="계정 연동"
        />
        <View android:layout_width="100dp"
              android:layout_gravity="center_vertical"
              android:layout_height="0.5dp"
              android:background="#cecece"/>

    </LinearLayout>


    <LinearLayout
            android:layout_marginTop="21dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/loginKaKaoBtn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/kakao_login_btn"/>
        <ImageView
                android:id="@+id/loginFacebookBtn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/facebook_login_btn"/>
        <ImageView
                android:id="@+id/loginGoogleBtn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/google_login_btn"/>
        <ImageView
                android:id="@+id/loginKbBtn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/kb_login_btn"/>

    </LinearLayout>
</LinearLayout>