<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layoutDirection="rtl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_gravity="right"
        android:textDirection="anyRtl"
        tools:openDrawer="start">

    <include
            layout="@layout/app_bar_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/nav_header_home"
            app:menu="@menu/activity_home_drawer">

        <ScrollView
                android:id="@+id/navigationmenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="177dp"
                android:background="@android:color/white">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                        android:layout_gravity="left"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/nanumsquareextrabold"
                        android:layout_marginLeft="28dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#3d3d3d"
                        android:lineSpacingExtra="2sp"
                        android:text="포인트리 얻기"
                />

                <RelativeLayout
                        android:id="@+id/pointLayout"
                        android:layout_width="match_parent"
                        android:layout_height="55dp">


                    <ImageView
                            android:id="@+id/checkImage"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="27.5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/drawer_attendance_icon"/>

                    <TextView
                            android:layout_toRightOf="@+id/checkImage"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="13dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#3d3d3d"
                            android:lineSpacingExtra="2sp"
                            android:text="포인트리 얻기"
                    />


                </RelativeLayout>

                <View
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="#858585"/>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp">


                    <ImageView
                            android:id="@+id/quizImage"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="27.5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/drawer_quiz_review_icon"/>

                    <TextView
                            android:layout_toRightOf="@+id/quizImage"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="13dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#3d3d3d"
                            android:lineSpacingExtra="2sp"
                            android:text="퀴즈 리뷰"
                    />


                </RelativeLayout>

                <View

                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="#858585"/>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp">


                    <ImageView
                            android:id="@+id/researchImage"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="27.5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/drawer_survey_icon"/>

                    <TextView
                            android:layout_toRightOf="@+id/researchImage"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="13dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#3d3d3d"
                            android:lineSpacingExtra="2sp"
                            android:text="설문 조사"
                    />


                </RelativeLayout>
                <View

                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="#858585"/>

                <TextView
                        android:layout_marginLeft="28dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/nanumsquareextrabold"
                        android:includeFontPadding="false"
                        android:layout_gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#3d3d3d"
                        android:lineSpacingExtra="2sp"
                        android:text="포인트리 활용하기"
                />

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp">


                    <ImageView
                            android:id="@+id/pointleeShopImage"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="27.5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/drawer_pointree_shop_icon"/>

                    <TextView
                            android:layout_toRightOf="@+id/pointleeShopImage"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="13dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#3d3d3d"
                            android:lineSpacingExtra="2sp"
                            android:text="포인트리 샵"/>


                </RelativeLayout>

                <RelativeLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="55dp">


                    <ImageView
                            android:id="@+id/noticeImage"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="27.5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/drawer_notice_icon"/>

                    <TextView
                            android:layout_toRightOf="@+id/noticeImage"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="13dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#3d3d3d"
                            android:lineSpacingExtra="2sp"
                            android:text="공지사항"/>


                </RelativeLayout>




            </LinearLayout>


        </ScrollView>


    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
