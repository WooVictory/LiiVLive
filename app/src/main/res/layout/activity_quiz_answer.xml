<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
>



    <RelativeLayout

            android:id="@+id/quiz_answer_layout"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="36dp"
            android:background="@drawable/border_sliding_layout_background">


        <RelativeLayout
                android:visibility="visible"
                android:id="@+id/quiz_explain_before_layout"
                android:layout_width="wrap_content"
                android:layout_below="@+id/quiz_check_btn"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/quiz_answer_title"
                    android:layout_marginHorizontal="16dp"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/nanumsquarebold"
                    android:includeFontPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="17sp"
                    android:textColor="#414141"
                    android:lineSpacingExtra="8sp"
                    android:text="Q. 주식 거래 정규 마감 시간은?"
            />

            <RelativeLayout
                    android:id="@+id/quiz_answer_one_layout"
                    android:layout_marginHorizontal="36dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/quiz_answer_title"
                    android:background="@drawable/border_quiz_answer"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                <TextView
                        android:id="@+id/quiz_answer_text_view_one"
                        android:layout_centerVertical="true"
                        android:paddingLeft="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#757575"
                        android:fontFamily="@font/nanumsquareregular"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="10sp"
                        android:text="PM 15:00"
                />

                <TextView
                        android:id="@+id/quiz_answer_people_text_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:fontFamily="@font/nanumsquareregular"
                        android:layout_centerVertical="true"
                        android:includeFontPadding="false"
                        android:layout_marginRight="16dp"
                        android:textColor="#c5c5c5"
                        android:lineSpacingExtra="14sp"
                        android:layout_alignParentRight="true"
                        android:text="1,829"
                />


            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/quiz_answer_two_layout"
                    android:layout_marginHorizontal="36dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/quiz_answer_one_layout"
                    android:background="@drawable/border_percentage_quiz"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                <TextView
                        android:id="@+id/quiz_answer_text_view_two"
                        android:layout_centerVertical="true"
                        android:paddingLeft="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#757575"
                        android:fontFamily="@font/nanumsquareregular"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="10sp"
                        android:text="PM 15:30"
                />

                <TextView
                        android:id="@+id/quiz_answer_people_text_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:fontFamily="@font/nanumsquareregular"
                        android:layout_centerVertical="true"
                        android:includeFontPadding="false"
                        android:layout_marginRight="16dp"
                        android:textColor="#c5c5c5"
                        android:lineSpacingExtra="14sp"
                        android:layout_alignParentRight="true"
                        android:text="1,829"
                />



            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/quiz_answer_three_layout"
                    android:layout_marginHorizontal="36dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/quiz_answer_two_layout"
                    android:background="@drawable/border_percentage_quiz"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="38dp"
                    android:layout_height="40dp">


                <TextView
                        android:id="@+id/quiz_answer_text_view_three"
                        android:layout_centerVertical="true"
                        android:paddingLeft="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#757575"
                        android:fontFamily="@font/nanumsquareregular"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="10sp"
                        android:text="PM 16:00"
                />
                <TextView
                        android:id="@+id/quiz_answer_people_text_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:fontFamily="@font/nanumsquareregular"
                        android:layout_centerVertical="true"
                        android:includeFontPadding="false"
                        android:layout_marginRight="16dp"
                        android:textColor="#c5c5c5"
                        android:lineSpacingExtra="14sp"
                        android:layout_alignParentRight="true"
                        android:text="1,829"
                />



            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout

            android:layout_above="@+id/quiz_answer_layout"
            android:id="@+id/circle_layout"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-23dp"
            android:background="@drawable/border_circle">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/quiz_answer_image"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/quiz_review_x_btn"/>

    </RelativeLayout>

