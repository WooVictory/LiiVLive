<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
>


    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
        <RelativeLayout
                android:id="@+id/dialog_icons"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_height="30dp"
                android:background="#00000000"
                android:gravity="bottom"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/yellow_icon"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/attendance_character_yellow"/>

            <ImageView
                    android:layout_toRightOf="@+id/yellow_icon"
                    android:id="@+id/blue_icon"
                    android:layout_marginLeft="12dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/attendance_character_blue"/>

            <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="42dp"
                    android:layout_height="17dp"
                    android:src="@drawable/attendance_character_lavender"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/dialog_view"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="36dp"
                android:layout_below="@+id/dialog_icons"
                android:background="@drawable/border_sliding_layout_background"
                android:layout_height="wrap_content"
                android:orientation="vertical">



            <TextView
                    android:id="@+id/one_title"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/nanumsquareextrabold"
                    android:includeFontPadding="false"
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#fdbd37"
                    android:lineSpacingExtra="3sp"
                    android:text="중간에 나가시면 안돼요!"
            />

            <TextView
                    android:layout_marginTop="13dp"
                    android:id="@+id/two_title"
                    android:layout_below="@+id/one_title"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#c7c7c7"
                    android:lineSpacingExtra="6sp"
                    android:fontFamily="@font/nanumsquareregular"
                    android:includeFontPadding="false"
                    android:gravity="center_horizontal"
                    android:text="지금 퀴즈를 종료하면 "
            />

            <TextView
                    android:id="@+id/three_title"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/two_title"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#c7c7c7"
                    android:lineSpacingExtra="6sp"
                    android:fontFamily="@font/nanumsquareregular"
                    android:includeFontPadding="false"
                    android:gravity="center_horizontal"
                    android:text="우승상금을 받을 수 없어요. "
            />



            <RelativeLayout
                    android:id="@+id/goToOngoingBtn"
                    android:layout_below="@+id/three_title"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="78dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/border_show_detail_btn_background">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:textColor="#ffffff"
                        android:lineSpacingExtra="2sp"
                        android:text="계속 진행하기"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/nanumsquareextrabold"
                        android:includeFontPadding="false"
                />
            </RelativeLayout>


            <RelativeLayout
                    android:id="@+id/goToExitBtn"
                    android:layout_below="@+id/goToOngoingBtn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="78dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/border_exit_button">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:textColor="#ffffff"
                        android:lineSpacingExtra="2sp"
                       android:text="나가기"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/nanumsquareextrabold"
                        android:includeFontPadding="false"
                />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>